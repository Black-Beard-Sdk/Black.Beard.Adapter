@using MudBlazor
@if (Menus != null)
{

    <MudNavMenu>
        <MudNavGroup Title="@(@Menus.Display.Translate(this))" Icon="@(Menus.Icon)" HideExpandIcon="@(!Menus.HasImage)">
        @foreach (var subMenu in Menus)
        {
            <DynamicServerMenuComponent Menu="@subMenu" />
        }
        </MudNavGroup>
    </MudNavMenu>

}
