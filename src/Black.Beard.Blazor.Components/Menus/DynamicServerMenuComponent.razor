@using Bb.UserInterfaces
@using MudBlazor

@if (Menu != null && Menu.ViewGuard)
{

    <MudNavMenu onclick="@(Menu.OnClick)">
        @if (Menu.IsEmpty)
        {
            <MudNavLink>@Menu.Display.Translate(this)</MudNavLink>
        }
        else
        {
            @foreach (ServerMenu subMenu in Menu)
            {
                if (subMenu.ViewGuard)
                {
                    <MudText Typo="Typo.h6" Class="px-4">@Menu.Display.Translate(this)</MudText>
                    <DynamicServerMenuComponent Menu="@subMenu" />
                }

            }
        }

    </MudNavMenu>

}
