@using Bb.UserInterfaces
@using MudBlazor

@if (Menu != null && Menu.ViewGuard)
{

    <MudNavMenu onclick="@(Menu.OnClick)">
        @if (Menu.IsEmpty)
        {
            if (Menu.ViewGuard)
            {
                <MudNavLink>@Menu.Display</MudNavLink>
            }
        }
        else
        {
            @foreach (DynamicServerMenu subMenu in Menu)
            {
                if (subMenu.ViewGuard)
                {
                    <MudText Typo="Typo.h6" Class="px-4">@Menu.Display</MudText>
                    <DynamicServerMenuComponent Menu="@subMenu" />
                }

            }
        }

    </MudNavMenu>

}
