@using Bb.PropertyGrid
@using MudBlazor

<MudDialog @bind-IsVisible="visible" Options="dialogOptions">

    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3" /> @this.Content.Title
        </MudText>
    </TitleContent>
    <DialogContent>

        <MudPaper Height="400px" Width="100%">
            <MudContainer MaxWidth="MaxWidth.Medium">

                <PropertyGridView SelectedObject="@CurrentModel"
                                  PropertyHasChanged="PropertyHasChanged"
                                  PropertyFilter="PropertyFilter"
                                  @ref="CurrentPropertyGridView" />

            </MudContainer>
        </MudPaper>

    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="px-10" Disabled=DisableCanCancel OnClick=Cancel StartIcon="@Icons.Material.Filled.Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="px-10" Disabled=DisableCanPrevious OnClick=GoToPreviousStep StartIcon="@Icons.Material.Filled.SkipPrevious">Previous</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="px-10" Disabled=DisableCanNext OnClick=GoToNextStep EndIcon="@Icons.Material.Filled.SkipNext">Next</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="px-10" Disabled=DisableCanValidate OnClick=Apply EndIcon="@Icons.Material.Filled.Check">Apply</MudButton>
    </DialogActions>
</MudDialog>



