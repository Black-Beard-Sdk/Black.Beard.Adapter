@using MudBlazor
@using Bb.PropertyGrid;

<MudDialog>

    <TitleContent>
        <MudText Typo="Typo.h6">@Title</MudText>
    </TitleContent>

    <DialogContent>


        @if(WithList)
        {

            <MudGrid>
                <MudItem xs="4" md="4">

                    <PropertyGridView @ref="CurrentPropertyGridView" SelectedObject="@ViewObject" />

                    @* <MudList T="string">
                        <MudListItem Text="Inbox" Icon="@Icons.Material.Filled.Inbox" />
                        <MudListItem Text="Trash" SecondaryText="Removed e-mails" />
                        <MudListItem Text="Spam" SecondaryText="E-mails from common providers" />
                    </MudList> *@
                </MudItem>

                <MudItem xs="8" md="8">
                    
                </MudItem>

            </MudGrid>

        }
        else
        {
            <PropertyGridView @ref="CurrentPropertyGridView" SelectedObject="@ViewObject" />
        }
        

    </DialogContent>

    <DialogActions>

        <MudButton Style="align-content:center"
                   Variant="Variant.Text"
                   Color="Color.Primary"
                   OnClick=Cancel>@ComponentConstants.Cancel.Translate(this)</MudButton>

        <MudButton Style="align-content:center"
                   Variant="Variant.Text"
                   Color="Color.Primary"
                   OnClick=Validate>@ComponentConstants.Submit.Translate(this)</MudButton>

    </DialogActions>


</MudDialog>
