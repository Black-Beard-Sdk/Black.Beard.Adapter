@inherits ComponentFieldBase<Int16>
@using MudBlazor

    <FluentLabel Typo="@LabelTypography"
                 Color="@LabelColor"
                 Alignment="LabelHorizontalAlignment">@Property.GetDisplay()</FluentLabel>

    <FluentNumberField @bind-Value="exampleInt2"
                       Appearance="FluentInputAppearance.Filled"
                       @oninput="@(e => Int16.TryParse(e.Value?.ToString(), out exampleInt2))"
                        Min="@GetMinimum()"
                        Max="@GetMaximum()"
                        Step="@GetStep()"
                       Label="Integer" />


        Format="@Property.DataFormatString"



    <MudNumericField 

        T="Int16"
        
        @bind-Value="Value"
        
        Label="@Property.GetDisplay()"
        HelperText="@Property.GetDescription()"
        
        Validation="Validate"
        Disabled="@Property.ReadOnly"
        Format="@Property.DataFormatString"

        Variant="Variant.Outlined" 
        
        Min="@GetMinimum()"
        Max="@GetMaximum()"
        
        Step="@GetStep()"

        />
