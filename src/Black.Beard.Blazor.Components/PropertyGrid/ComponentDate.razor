@inherits ComponentFieldBase<DateTime>
@using MudBlazor

    <MudDatePicker 
        Class="fontPropertyGrid"
        Label="@Property.GetDisplay()"
        Editable="@(!Property.ReadOnly)"
        @bind-Date="Date"
        Placeholder="@Property.GetDescription()"
        Variant="@CurrentVariant"
        Margin="@CurrentMargin"
        onfocus="@OnFocus" />


