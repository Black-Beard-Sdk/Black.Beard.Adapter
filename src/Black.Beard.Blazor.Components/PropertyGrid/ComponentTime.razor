@inherits ComponentFieldBase<string>
@using MudBlazor

<MudTextField T="string"
              Label="@Property.GetDisplay()"
              HelperText="@Property.GetDescription()"
              @bind-Value="Value"
              Validation="Validate"
              Disabled="@Property.ReadOnly"
              Format="@Property.DataFormatString"
              MaxLength="@Property.Maximum"
              Variant="@CurrentVariant"
              Margin="@CurrentMargin"
              Lines="@Property.Line"
              InputType="@inputType" />

