@inherits ComponentFieldBase<string>
@using Microsoft.FluentUI.AspNetCore.Components

<FluentLabel Typo="@LabelTypography"
             Color="@LabelColor"
             Alignment="LabelHorizontalAlignment">@Property.GetDisplay()</FluentLabel>

<FluentTextField 
    @bind-Value=Value 
    Placeholder="@Property.GetDescription()" 
    style="width: 80%;"
    ReadOnly="@IsReadOnly"></FluentTextField>



