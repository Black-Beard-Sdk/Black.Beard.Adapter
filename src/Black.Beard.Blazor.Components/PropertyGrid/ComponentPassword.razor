@using Microsoft.FluentUI.AspNetCore.Components
@inherits ComponentFieldBase<string>

<FluentLabel 
    Typo="@LabelTypography" 
    Color="@LabelColor" 
    Alignment="LabelHorizontalAlignment"
    >@Property.GetDisplay()</FluentLabel>

<FluentTextField 
    @bind-Value=Value 
    Placeholder="@Property.GetDescription()" 
    style="width: 80%;"
    TextFieldType="TextFieldType.Password"
    ReadOnly="@IsReadOnly"></FluentTextField>
       
