@inherits ComponentFieldBase<decimal>
    @using MudBlazor

    <MudNumericField T="decimal"                 
        Class="fontPropertyGrid"
        @bind-Value="Value"
        Label="@Property.GetDisplay()"
        HelperText="@Property.GetDescription()"
        Validation="Validate"
        Disabled="@Property.ReadOnly"
        Format="@Property.FormatString"
        Variant="@CurrentVariant"
        Margin="@CurrentMargin"
        Min="@GetMinimum()"
        Max="@GetMaximum()"
        Step="@GetStep()"
        onfocus="@OnFocus" />

