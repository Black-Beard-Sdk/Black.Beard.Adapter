@using Microsoft.FluentUI.AspNetCore.Components
@inherits ComponentFieldBase<object>
@using Bb.ComponentModel.DataAnnotations

<FluentLabel Typo="@LabelTypography"
             Color="@LabelColor"
             Alignment="LabelHorizontalAlignment">@Property.GetDisplay()</FluentLabel>


<FluentCombobox TOption="Option<string>"
                Items=@Items
                OptionText="@(i => i.Text)"
                OptionValue="@(i => i.Value)"
                OptionSelected="@(i => i.Selected)"
                @bind-Value="@SelecteItem" 
                />