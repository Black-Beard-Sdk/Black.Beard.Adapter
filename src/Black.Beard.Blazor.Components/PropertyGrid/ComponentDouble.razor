@inherits ComponentFieldBase<double>
    @using MudBlazor


    <FluentLabel Typo="@LabelTypography"
                 Color="@LabelColor"
                 Alignment="LabelHorizontalAlignment">@Property.GetDisplay()</FluentLabel>

    <FluentNumberField @bind-Value="exampleInt2"
                       Appearance="FluentInputAppearance.Filled"
                       @oninput="@(e => double.TryParse(e.Value?.ToString(), out exampleInt2))"
                        Min="@GetMinimum()"
                         Max="@GetMaximum()"
                         Step="@GetStep()"
                       Label="Integer" />


    Format="@Property.DataFormatString"



    <MudNumericField T="double"
                     @bind-Value="Value"
                     Label="@Property.GetDisplay()"
                     HelperText="@Property.GetDescription()"
                     Validation="Validate"
                     Format="@Property.DataFormatString"
                     Variant="Variant.Outlined"
                     Disabled="@Property.ReadOnly"
                     Min="@GetMinimum()"
                     Max="@GetMaximum()"
                     Step="@GetStep()" />

